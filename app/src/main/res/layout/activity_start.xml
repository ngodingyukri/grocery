<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_smartdata"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/smartdata"/>

        <TextView
            android:id="@+id/mulai_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mulai Transaksi"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_smartdata"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tokomuTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="di Tokomu"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/mulai_transaksi"
            android:textSize="26sp"/>


        <TextView
            android:id="@+id/deskripsi_smartdata"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Smart-POS HADIR Membantu Kebutuhan serta kemudahan Penjualan UKM &amp; Perorangan"
            android:gravity="center_horizontal"
            android:maxLines="3"
            android:layout_marginTop="100dp"
            android:textAlignment="inherit"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tokomuTv"
            android:textSize="26sp"/>

        <Button
            android:id="@+id/mulai_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_rect07"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/deskripsi_smartdata"
            android:text="Mulai"/>


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>